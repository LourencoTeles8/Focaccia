<style>
/* Navbar Brand */
.navbar-brand {
    font-family: 'Arial Black', sans-serif;
    font-size: 1.5rem;
    color: #25be14 !important; /* Eye-catching color for the logo */
}

/* Navbar Links */
.navbar-nav .nav-link {
    font-size: 1rem;
    font-weight: 300; /* Lighter font weight */
    color: #d1d1d1; /* Light gray color */
    padding: 0.5rem 1rem;
    transition: color 0.3s ease, background-color 0.3s ease;
}

.navbar-nav .nav-link:hover {
    color: #ffffff; /* Bright white for hover */
    background-color: rgba(37, 190, 20, 0.284); /* Subtle green highlight */
    border-radius: 5px; /* Slightly rounded corners */
}

/* Toggler Button */
.navbar-dark .navbar-toggler {
    border-color: #25be14; /* Match logo color */
}

.navbar-dark .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(37, 190, 20, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
}

.navbar {
    opacity: 0;
    transform: translateY(-20px);
    transition: opacity 1s ease, transform 2s ease;
}

.navbar.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Login/Signup Buttons */
.navbar-buttons .btn {
    font-size: 0.9rem;
    font-weight: 500;
    color: white;
    border-radius: 5px;
    margin-left: 10px;
    transition: all 0.3s ease;
}

.navbar-buttons .btn:hover {
    color: white;
    background-color: #25be14; /* Match the logo color */
    border-color: #25be14;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const navbar = document.querySelector(".navbar");
    navbar.classList.add("visible");
});
</script>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand font-weight-bold text-uppercase" href="/">
            FOCCACIA
        </a>
        
        <!-- Toggler for mobile view -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Navbar Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link {{isActive '/groups' currentPath}}" href="/groups">Groups</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{isActive '/teams' currentPath}}" href="/teams">Teams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{isActive '/leagues' currentPath}}" href="/leagues">Leagues</a>
                </li>
            </ul>

            <!-- Login/Logout Buttons -->
            <div class="navbar-buttons d-flex">
                {{#if isAuthenticated}}
                    <form action="/logout" method="post">
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>
                {{else}}
                    <a class="btn btn-outline-light" href="/login">Login</a>
                    <a class="btn btn-success" href="/signup">Signup</a>
                {{/if}}
            </div>
        </div>
    </div>
</nav>
